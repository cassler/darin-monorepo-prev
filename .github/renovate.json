{
  "enabled": true,
  "extends": ["config:base"],
  "timezone": "America/Chicago",
  "schedule": ["every weekday"],
  "rangeStrategy": "replace",
  "automergeType": "pr",
  "automerge": true,
  "automergeComment": "bors: r+",
  "additionalBranchPrefix": "PKG - ",
  "baseBranches": ["next"],
  "rebaseWhen": "behind-base-branch",
  "prConcurrentLimit": 10,
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/examples/**",
    "**/__tests__/**",
    "**/test/**",
    "**/tests/**",
    "**/__fixtures__/**"
  ]
}
