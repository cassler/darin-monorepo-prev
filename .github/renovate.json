{
  "enabled": true,
  "extends": [
    "config:base"
  ],
  "schedule": [
    "every weekday"
  ],
  "rangeStrategy": "replace",
  "automerge": true,
  "automergeType": "pr-comment",
  "automergeComment": "bors: r+",
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/examples/**",
    "**/__tests__/**",
    "**/test/**",
    "**/tests/**",
    "**/__fixtures__/**"
  ]
}
