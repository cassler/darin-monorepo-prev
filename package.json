{
	"name": "ts-monorepo",
	"description": "Template for setting up a TypeScript monorepo",
	"private": true,
	"workspaces": [
		"packages/*",
		"examples/*"
	],
	"scripts": {
		"docs": "doctoc --title '**Table of content**' README.md",
		"clean": "lerna run clean",
		"build": "lerna run build",
		"pub": "lerna publish",
		"test": "lerna run test",
		"storybook": "lerna run storybook",
		"cra": "yarn workspace @cassler/cra-example run start"
	},
	"devDependencies": {
		"@nighttrax/eslint-config-tsx": "~6.1.0",
		"doctoc": "~1.4.0",
		"eslint": "~7.6.0",
		"lerna": "^3.22.1",
		"typescript": "~3.9.6"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/"
	}
}
